<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
  <description>The coding standard for our project.</description>

  <rule ref="PSR2"/>

  <file>src</file>
  <file>tests</file>

  <!-- Use colors -->
  <arg name="colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>
  <!-- Show progress of the run -->
  <arg value="p"/>
</ruleset>
